    }
</script>
<script>
    function CalculateBlamt() {
        var TAXABVAL = retFloat($("#TAXABVAL").val());
        var GSTPER = retFloat($("#GSTPER").val());
        var TOTTAX = (TAXABVAL * GSTPER / 100);
        TOTTAX = RoundOff(TOTTAX, 2);
        $("#TOTTAX").val(TOTTAX);
        var blamt = 0;
        var RoundOff = document.getElementById("RoundOff").checked;
        if (RoundOff) {
            blamt = TAXABVAL + TOTTAX;
            var blafterround = RoundOff(TAXABVAL, 0);
            var roundamt = blafterround - blamt;
            $("#ROAMT").val(roundamt.toFixed(2));
            $("#BLAMT").val(blafterround);
        }
        else {
            blamt = TAXABVAL + TOTTAX;
            var blafterround = RoundOff(TAXABVAL, 2);
            var roundamt = 0;
            $("#ROAMT").val(roundamt.toFixed(2));
            $("#BLAMT").val(blafterround);
        }
    }
</script>
