                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="editor-field">
                                @Html.EditorFor(model => model.M_PRODTAX.EFFDT, new { htmlAttributes = new { @class = "form-control ", id = "EFFDT", @placeholder = "dd/mm/yyyy", maxlength = 10, onblur = "DocumentDateCHK(this)" } })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="editor-field">
