                    </div>
                    <div class="col-lg-8" style="border: 2px groove;width:auto;">
                        <label class="radio-inline">
                            @Html.RadioButtonFor(g => g.TEXTBOX3, "DETAIL", new { @checked = "checked", onclick = "Check('DETAIL')" })  @Html.Label("Detail")
