<script>
    function SelectGodownCode(id, TEXTBOX4, TEXTBOX5) {
        debugger;
        if (id == "") {
            $("#" + TEXTBOX4.id).val("");
            $("#" + TEXTBOX5.id).val("");
        }
        else {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetGodownDetails", PageControllerName)',
                data: { val: id },
                success: function (result) {
                    var MSG = result.indexOf(String.fromCharCode(181));
                    if (MSG >= 0) {
                        $("#tempHDD").val(result);
                        var findstr = $("#tempHDD").val();
                        document.getElementById(TEXTBOX4.id).value = returncolvalue(findstr, "GOCD");
                        document.getElementById(TEXTBOX5.id).value = returncolvalue(findstr, "GONM");
                    }
                    else {
                        $("#Msgdiv1").show();
                        $("#info").show();
                        $("#" + TEXTBOX4.id).val("");
                        $("#" + TEXTBOX5.id).val("");
                        $("#btnok").focus();
                        $("#msgbody_info").html(result);
                        message_value = TEXTBOX4.id;
                    }
                }
            });
        }
    }

</script>
