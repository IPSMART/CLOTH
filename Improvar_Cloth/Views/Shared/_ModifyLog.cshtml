@model Improvar.ViewModels.ModifyLog
<script src="~/Scripts/Custom.js"></script>
<div class="modal-dialog modal-sm">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Modify Log </h4>
        </div>
        <div class="modal-body">
            @if (Model.ModifyLogGrid != null)
            {
                <table class="table table-striped table-bordered" style="max-width:815px">
                    <thead>
                        <tr><th>SL. No.</th><th>Activity Date</th><th>User Name</th><th>Edit Remarks</th></tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i <= Model.ModifyLogGrid.Count - 1; i++)
                        {
                            <tr>
                                <td>
                                    @if (i == Model.ModifyLogGrid.Count-1 || Model.showlink == false)
                                    {
                                        @Html.DisplayFor(model => model.ModifyLogGrid[i].SLNO)
                                        @Html.HiddenFor(model => model.ModifyLogGrid[i].AUTONO, new { id = "AUTONO_" + i })
                                        @Html.HiddenFor(model => model.ModifyLogGrid[i].SCHEMA, new { id = "SCHEMA_" + i })
                                    }
                                    else
                                    {
                                        <a href="~/Audit_Details/Audit_Details?AUTONO=@Model.ModifyLogGrid[i].AUTONO&EMDNO=@Model.ModifyLogGrid[i].EMDNO" target="_blank">
                                            @Html.DisplayFor(model => model.ModifyLogGrid[i].SLNO)
                                            @Html.HiddenFor(model => model.ModifyLogGrid[i].AUTONO, new { id = "AUTONO_" + i })
                                            @Html.HiddenFor(model => model.ModifyLogGrid[i].SCHEMA, new { id = "SCHEMA_" + i })
                                        </a>
                                    }

                                </td>
                                <td>
                                    @if (i == Model.ModifyLogGrid.Count-1 || Model.showlink == false)
                                    {
                                        @Html.DisplayFor(model => model.ModifyLogGrid[i].MODIFYDT)
                                    }
                                    else
                                    {
                                        <a href="~/Audit_Details/Audit_Details?AUTONO=@Model.ModifyLogGrid[i].AUTONO&EMDNO=@Model.ModifyLogGrid[i].EMDNO" target="_blank">
                                            @Html.DisplayFor(model => model.ModifyLogGrid[i].MODIFYDT)
                                        </a>
                                    }
                                </td>
                                <td>
                                    @if (i == Model.ModifyLogGrid.Count-1 || Model.showlink == false)
                                    {
                                        @Html.DisplayFor(model => model.ModifyLogGrid[i].USERID)
                                    }
                                    else
                                    {
                                        <a href="~/Audit_Details/Audit_Details?AUTONO=@Model.ModifyLogGrid[i].AUTONO&EMDNO=@Model.ModifyLogGrid[i].EMDNO" target="_blank">
                                            @Html.DisplayFor(model => model.ModifyLogGrid[i].USERID)
                                        </a>
                                    }
                                </td>
                                <td>
                                    @if (i == Model.ModifyLogGrid.Count-1 || Model.showlink == false)
                                    {
                                        @Html.DisplayFor(model => model.ModifyLogGrid[i].LM_REM)
                                    }
                                    else
                                    {
                                        <a href="~/Audit_Details/Audit_Details?AUTONO=@Model.ModifyLogGrid[i].AUTONO&EMDNO=@Model.ModifyLogGrid[i].EMDNO" target="_blank">
                                            @Html.DisplayFor(model => model.ModifyLogGrid[i].LM_REM)
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            }
            else
            {
                <p> Some internal Problem Found  [No column Found]</p>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" onclick="FilterColumn()">Close</button>
        </div>
    </div>
</div>
