@model Improvar.ViewModels.ModifyLog
<div class="modal-dialog modal-sm">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Modify Log </h4>
        </div>
        <div class="modal-body">
            @if (Model.ModifyLogGrid != null)
            {
                <table class="table table-striped table-bordered" style="max-width:815px">
                    <thead>
                        @*<tr>
                            <th colspan="3" class="text-center">
                                <span class="text-right" style="float:unset;color:darkslateblue;"> Edited BY </span>
                            </th>
                        </tr>*@
                        <tr><th>SL. No.</th><th>Activity Date</th><th>User Name</th></tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i <= Model.ModifyLogGrid.Count - 1; i++)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.ModifyLogGrid[i].SLNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.ModifyLogGrid[i].MODIFYDT)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.ModifyLogGrid[i].USERID)
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            }
            else
            {
                <p> Some internal Problem Found  [No column Found]</p>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" onclick="FilterColumn()">Close</button>
        </div>
    </div>
</div>

