                                        <td class="">
                                            @Html.EditorFor(model => Model.TBATCHDTL[i].GSTPER, new { htmlAttributes = new { @class = "atextBoxFor", id = "B_GSTPER_", @onkeypress = "return numericOnly(this,2);", maxlength = 5 } })
