                                        <td class="">
                                            @Html.EditorFor(model => Model.TBATCHDTL[i].TDDISCTYPE, new { htmlAttributes = new { @class = "atextBoxFor", id = "B_TDDISCTYPE", maxlength = 1, @list = "TDDISCTYPE_List1" } })
