@model Improvar.ViewModels.TransactionPackingSlipEntry
<script type="text/javascript">
    $(document).ready(function () {
        resizableTables[resizableTables.length] = new ColumnResize(document.getElementById('_T_SALE_PRODUCT_GRID'));
        $("td").on("mouseover", function (e) { var titlee = $(this).find("input").val(); $(this).attr('title', titlee); });

    });

</script>
<div style="transform: translate(0%, 0%);z-index: 1100;background-color:#c4b9b9;border:5px groove;">
    <div class="table-responsive">
        @if (Model.DefaultView == true)
        {
            @Html.ValidationSummary(true)
            <div class="grid_title">
                <input type="text" id="AddRowsMain" name="AddRowsMain" placeholder="rows" style="font-size: 11px;font-weight: bold;width:40px;height:17px;float:left;padding: 2px;" maxlength="3" onkeypress="return numericOnly(this);" />
                @*<img src="~/Image/Plus.png" id="btnAddMain" title="Add Row" class="Help_image_buttonAddRemove" onclick="AddRow('AddRowsMain')" />
                <img src="~/Image/Minus.png" id="btnDeleteMain" title="Delete Row" class="Help_image_buttonAddRemove" onclick="DeleteRow()" />*@
                <div class="col-md-8">
                    <input type="text" name="search" class="grid_title_box textbox_image" value="" placeholder="Filter" onkeyup="filterTable(event, '_T_SALE_PRODUCT_GRID');" />
                    <img src="~/Image/search.png" title="Help" />
                </div>
                <center style="font-size:11px;color:darkmagenta;border:1px inset;height: 21px;padding: 4px;">
                    <b>Packing Slip Entry Product Details</b>
                </center>
            </div>
            <div class="sticky-table sticky-ltr-cells">
                <div style="height:auto;overflow-y:scroll;max-height:235px;">
                    <table id="_T_SALE_PRODUCT_GRID" class="resizable table-striped" cellpadding="0px" cellspacing="0px" style="width: 1633px;">
                        <thead>
                            <tr class="sticky-header" style="height:30px;">
                                <th class="sticky-cell" style="width: 27px;"></th>
                                <th class="" style="width: 30px;text-align:center;">SL No.</th>
                                <th class="" style="width: 59px;">ItmGrp</th>
                                <th class="" style="width: 100px;">Material Job</th>
                                <th class="" style="width: 92px;">Item</th>
                                <th class="" style="width: 179px;">Fabric Item</th>
                                <th class="" style="width:96px;">Design</th>
                                <th class="" style="width:65px;">Stock Type</th>
                                <th class="" style="width: 59px;">Part</th>
                                <th class="" style="width: 59px;">Color Code</th>
                                <th class="" style="width: 59px;">Color Name</th>
                                <th class="" style="width: 59px;">Size</th>
                                <th class="" style="width: 59px;">Shade</th>
                                <th class="" style="width:111px;text-align:right;">Quantity</th>
                                <th class="" style="width:47px;">UOM</th>
                                <th class="" style="width:240px;text-align:right;">Nos</th>
                                <th class="" style="width:240px;text-align:right;">Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TTXNDTL != null)
                            {
                                for (int i = 0; i <= Model.TTXNDTL.Count - 1; i++)
                                {
                            <tr style="font-size:12px; font-weight:bold;">
                                <td class="sticky-cell" style="padding-left:7px;padding-right:7px;">
                                    @Html.CheckBoxFor(model => model.TTXNDTL[i].Checked, new { id = "chkid_" + i, @TabIndex = -1 })
                                </td>
                                <td class="">
                                    @Html.TextBoxFor(model => Model.TTXNDTL[i].SLNO, new { id = "SLNO_" + i, @class = " atextBoxFor ", @style = "text-align:center;", maxlength = 2, @TabIndex = -1, @readonly = "readonly" })
                                </td>
                                <td class="">
                                    @Html.TextBoxFor(model => Model.TTXNDTL[i].ITGRPNM, new { id = "ITGRPNM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                    @Html.HiddenFor(model => model.TTXNDTL[i].ITGRPCD, new { id = "ITGRPCD_" + i })
                                </td>
                                <td class="">
                                    @Html.TextBoxFor(model => Model.TTXNDTL[i].MTRLJOBNM, new { id = "MTRLJOBNM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                    @Html.HiddenFor(model => model.TTXNDTL[i].MTRLJOBCD, new { id = "MTRLJOBCD_" + i })
                                </td>
                                <td class="">
                                    @Html.TextBoxFor(model => Model.TTXNDTL[i].ITNM, new { id = "ITNM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                    @Html.HiddenFor(model => model.TTXNDTL[i].ITCD, new { id = "ITCD_" + i })
                                </td>
                                <td class="">
                                    @Html.TextBoxFor(model => Model.TTXNDTL[i].FABITNM, new { id = "FABITNM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                    @Html.HiddenFor(model => model.TTXNDTL[i].FABITCD, new { id = "FABITCD_" + i })
                                </td>
                                <td class="">
                                    @Html.TextBoxFor(model => Model.TTXNDTL[i].STYLENO, new { id = "STYLENO_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                </td>
                                <td class="">
                                    @Html.DropDownListFor(model => Model.TTXNDTL[i].STKTYPE, new SelectList(Model.TTXNDTL[i].DropDown_list1, "value", "text", Model.TTXNDTL[i].STKTYPE), new { id = "STKTYPE_" + i, @class = "atextBoxFor select_3d", @TabIndex = -1 })
                                </td>
                                <td class="">
                                    @Html.TextBoxFor(model => Model.TTXNDTL[i].PARTNM, new { id = "PARTNM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                    @Html.HiddenFor(model => model.TTXNDTL[i].PARTCD, new { id = "PARTCD_" + i })
                                </td>
                                <td class="">
                                    @Html.TextBoxFor(model => Model.TTXNDTL[i].COLRCD, new { id = "COLRCD_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                </td>
                                <td class="">
                                    @Html.TextBoxFor(model => Model.TTXNDTL[i].COLRNM, new { id = "COLRNM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                </td>
                                <td class="">
                                    @Html.TextBoxFor(model => Model.TTXNDTL[i].SIZENM, new { id = "SIZENM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                    @Html.HiddenFor(model => model.TTXNDTL[i].SIZECD, new { id = "SIZECD_" + i })
                                </td>
                                <td class="">
                                    @Html.TextBoxFor(model => Model.TTXNDTL[i].SHADE, new { id = "SHADE_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                </td>
                                <td class="">
                                    @Html.EditorFor(model => Model.TTXNDTL[i].QNTY, new { htmlAttributes = new { id = "QNTY_" + i, @style = "text-align: right;", @onkeypress = "return numericOnly(this,3);", @class = " atextBoxFor", maxlength = 12 } })
                                </td>
                                <td class="">
                                    @Html.TextBoxFor(model => Model.TTXNDTL[i].UOM, new { id = "UOM_" + i, @class = " atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                </td>
                                <td class="">
                                    @Html.EditorFor(model => Model.TTXNDTL[i].NOS, new { htmlAttributes = new { id = "NOS_" + i, @style = "text-align: right;", @onkeypress = "return numericOnly(this,3);", @class = " atextBoxFor", maxlength = 12 } })
                                </td>
                                <td class="">
                                    @Html.EditorFor(model => Model.TTXNDTL[i].RATE, new { htmlAttributes = new { id = "RATE_" + i, @style = "text-align: right;", @onkeypress = "return numericOnly(this,2);", @class = " atextBoxFor", maxlength = 14 } })
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="sticky-footer">
                                <td class="sticky-cell" style="width:27px;"> <input type="text" class="atextBoxFor" readonly="readonly" />  </td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td> @*RATE*@
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }
    </div>
</div>
