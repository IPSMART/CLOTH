                                        <td class="">
                                            @Html.EditorFor(model => Model.TBATCHDTL[i].SCMDISCTYPE, new { htmlAttributes = new { @class = "atextBoxFor", id = "B_SCMDISCTYPE", maxlength = 1, @list = "SCMDISCTYPE_List1" } })
