                                            @Html.DropDownListFor(model => Model.TBATCHDTL[i].DISCTYPE, new SelectList(Model.TBATCHDTL[i].DISC_TYPE, "value", "text", Model.TBATCHDTL[i].DISCTYPE), new { id = "B_DISCTYPE" + i, @class = "atextBoxFor select_3d", @TabIndex = -1 })
