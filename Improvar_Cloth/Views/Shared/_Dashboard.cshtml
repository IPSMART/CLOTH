                                <div class="col-sm-1">
                                    <span title="Refresh Board" class="glyphicon glyphicon-refresh" style="color:greenyellow;vertical-align:middle;cursor:pointer;"
                                          onclick="UpdateDashboard('@Model.DashboardList[index].BoardCode', Dash_Authorise_Permission.id)"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div style="padding:0px 0px;background-color:#ffffff;margin-top:10px;height:159px;overflow-y:auto">
                                    @if (Model.DashboardList[index].DataTable != null)
                                    {  <table cellpadding="10px" cellspacing="10px" style="color:black;width:100%;height:100%">
                                        @if (Model.DashboardList[index].DataTable.Rows.Count > 0)
                                        {
                                            for (int i = 0; i <= Model.DashboardList[index].DataTable.Rows.Count - 1; i++)
                                            {
                                                <tr style="border-bottom:1pt solid #dbd7d7">
                                                    <td style="padding-left:10px">
                                                        <span>@Model.DashboardList[index].DataTable.Rows[i]["dname"] [@Model.DashboardList[index].DataTable.Rows[i]["doccd"]] &nbsp;</span>
                                                    </td>
                                                    <td>
                                                        <div class="container_imageDIV" title="Document No - @Model.DashboardList[index].DataTable.Rows[i]["docno"]" style="cursor:pointer">
                                                            @if (Convert.ToInt32(Model.DashboardList[index].DataTable.Rows[i]["total_docno"]) > 0)
                                                            {
                                                                var Sql = Model.DashboardList[index].DataTable.Rows[i]["doctype"] + "_" + Model.DashboardList[index].DataTable.Rows[i]["doccd"];
                                                                var SqlStr = Model.DashboardList[index].DataTable.Rows[i]["URL"] + "&param_SQL=" + Sql;
                                                                <a style="color:white" onclick="ThirdPartyCall('@SqlStr');">
                                                                    <img src="~/Image/greenlight.png" height="50px" width="50px" />
                                                                    <div class="centered_imageDIV">@Model.DashboardList[index].DataTable.Rows[i]["total_docno"]</div>
                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <img src="~/Image/redlight.png" height="50px" width="50px" />
                                                                <div class="centered_imageDIV">@Model.DashboardList[index].DataTable.Rows[i]["total_docno"]</div>
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td style="text-align:center;font-weight:bold;color:#fa0606">
