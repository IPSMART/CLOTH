@model Improvar.Models.Menu
@*inv fin sales*@
@if (Model != null && Model.DashboardList != null)
{
    for (int index = 0; index < Model.DashboardList.Count; index++)
    {
        if (Model.DashboardList[index].BoardCode == "TS_DOCAUTH")
        {
            <div>
                @Html.HiddenFor(model => model.DashboardList[index].BoardCode, new { id = "Dash_Authorise_BoardCode" })
                @Html.HiddenFor(model => model.DashboardList[index].Permission, new { id = "Dash_Authorise_Permission" })
