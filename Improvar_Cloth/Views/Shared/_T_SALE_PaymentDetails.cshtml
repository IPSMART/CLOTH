

@model Improvar.ViewModels.TransactionSaleEntry
<style>
    @@media (min-width: 992px) {
        .modal-lg {
            min-width: 800px !important;
        }
    }
</style>
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Payment Details</h4>
        </div>
        <div class="modal-body ">
            @if (Model.PAYMENT_DETAILS != null)
            {
                <table class="table table-striped table-bordered" style="max-width:815px">
                    <thead>
                        @*<tr>
                                <th colspan="3" class="text-center">
                                    <span class="text-right" style="float:unset;color:darkslateblue;"> Edited BY </span>
                                </th>
                            </tr>*@
                        <tr><th>Docdt</th><th>DocNo</th><th>Remarks</th><th>Chq.No</th><th>DocType</th><th>Dr.Amt</th><th>Cr.Amt</th></tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i <= Model.PAYMENT_DETAILS.Count - 1; i++)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.PAYMENT_DETAILS[i].DOCDT)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.PAYMENT_DETAILS[i].DOCNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.PAYMENT_DETAILS[i].REMARKS)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.PAYMENT_DETAILS[i].CHQNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.PAYMENT_DETAILS[i].DOCTYPE)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.PAYMENT_DETAILS[i].DRAMT)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.PAYMENT_DETAILS[i].CRAMT)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p> Some internal Problem Found  [No column Found]</p>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" onclick="FilterColumn()">Close</button>
        </div>
    </div>
</div>

