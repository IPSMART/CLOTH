@model Improvar.Models.MenuRightByUser
<script>
    $("#userrightwrapper").draggable({ cursor: "move" });
    function CloseHelp() {
        $('#partialuserright').html("");
        $('#partialuserright').hide();
    }
</script>
@using (Html.BeginForm())
{
<div id="userrightwrapper">
    <div style="height:30px;width:100%;background-color:#27658a;vertical-align:middle; font-weight:bold">
        <table id="tableHeader" width="100%" height="100%" cellpadding="3px" cellspacing="3px">
            <tr>
                @*Take a refresh button*@
                <td align="center" style="width:80%;color:#eee;text-align:center">@Model.MENU_NAME
                    @Html.HiddenFor(_ => _.MENU_INDEX)
                    @Html.HiddenFor(_ => _.MENU_NAME)
                    @Html.HiddenFor(_ => _.MENU_PROGCALL)
                    @Html.HiddenFor(_ => _.ParentID)
                    @Html.HiddenFor(_ => _.USR_ID)
                    @Html.HiddenFor(_ => _.MENU_type)
                    @Html.HiddenFor(_ => _.MENU_date_option)
                    @Html.HiddenFor(_ => _.MENU_ID)                  
                </td>
                
                <td align="center" style="width:10%">
                    <img src="~/Image/close.png" title="Close" onclick="CloseHelp();" style="color:red;vertical-align:middle;cursor:pointer;" width="16px" height="16px" />                   
                </td>
            </tr>
        </table>
    </div>
    <div id="userrighttextarea" style="padding:5px; font-size:11px">
        @{
            if (Model.MENU_type == "E" || Model.MENU_type == "M")
            {
                <table id="p1" cellpadding="3px" cellspacing="3px" width="100%">
                    <thead style="background-color: #2965aa; color:white">
                        <tr>
                            @{
                                if (Model.MENU_type == "M")
                                {
                                    <th>Add</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                    <th>View</th>
                                }
                                else if (Model.MENU_type == "E")
                                {
                                    <th>Ckeck</th>
                                    <th>Add</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                    <th>View</th>
                                }
                            }                                                        
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @{
                                if (Model.MENU_type == "M")
                                {                                    
                                    <td align="center">@Html.CheckBoxFor(_ => _.Add)</td>
                                    <td align="center">@Html.CheckBoxFor(_ => _.Edit)</td>
                                    <td align="center">@Html.CheckBoxFor(_ => _.Delete)</td>
                                    <td align="center">@Html.CheckBoxFor(_ => _.View)</td>
                                }
                                else if (Model.MENU_type == "E")
                                {
                                    <td align="center">@Html.CheckBoxFor(_ => _.Check)</td>
                                    <td align="center">@Html.CheckBoxFor(_ => _.Add)</td>
                                    <td align="center">@Html.CheckBoxFor(_ => _.Edit)</td>
                                    <td align="center">@Html.CheckBoxFor(_ => _.Delete)</td>
                                    <td align="center">@Html.CheckBoxFor(_ => _.View)</td>
                                }
                            }                          
                        </tr>
                    </tbody>
                </table>
            }
            else
            {
                <table id="p1" cellpadding="3px" cellspacing="3px" width="100%">
                    <thead style="background-color: #2965aa; color:white">
                        <tr>
                            <th>Active</th>                           
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td align="center">@Html.CheckBoxFor(_ => _.Active)</td>                            
                        </tr>
                    </tbody>
                </table>
            }
        }        
        @{
            if (Model.MENU_date_option == "Y")
            {
                <table id="p2" cellpadding="3px" cellspacing="3px" width="100%">
                    <thead style="background-color: #2965aa; color:white">
                        <tr>
                            <th>Add-Day</th>
                            <th>Edit-Day</th>
                            <th>Delete-Day</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td align="center">@Html.TextBoxFor(_ => _.A_DAY, new { @onkeypress = "return event.charCode > 47 && event.charCode < 58;", maxlength = "3", style = "width:50px;height:22px" })</td>
                            <td align="center">@Html.TextBoxFor(_ => _.E_DAY, new { @onkeypress = "return event.charCode > 47 && event.charCode < 58;", maxlength = "3", style = "width:50px;height:22px" })</td>
                            <td align="center">@Html.TextBoxFor(_ => _.D_DAY, new { @onkeypress = "return event.charCode > 47 && event.charCode < 58;", maxlength = "3", style = "width:50px;height:22px" })</td>
                        </tr>
                    </tbody>
                </table>
            }
        }        
        <br />
        <input type="button" value="Save" style="background-color:#0d6b02;color:white;border-radius:4px;width:75px;height:25px;float:right" onclick="updateTree('@Model.MENU_PROGCALL');" />        
    </div>       
</div>
}