@model Improvar.ViewModels.TransactionOutIssProcess
<script type="text/javascript">
    $(document).ready(function () {
        resizableTables[resizableTables.length] = new ColumnResize(document.getElementById('__T_OUTISSPROCESS_QtyRequirement_GRID'));
        $("td").on("mouseover", function (e) { var titlee = $(this).find("input").val(); $(this).attr('title', titlee); });

    });

</script>
<div style="transform: translate(0%, 0%);z-index: 1100;background-color:#c4b9b9;border:5px groove;">
    <div class="table-responsive">
        @if (Model.DefaultView == true)
        {
            @Html.ValidationSummary(true)
            <div class="grid_title">
                @if (Model.DefaultAction == "A" || Model.DefaultAction == "E")
                {
                    <input type="text" id="AddRowsMain" name="AddRowsMain" placeholder="rows" style="font-size: 11px;font-weight: bold;width:40px;height:17px;float:left;padding: 2px;" maxlength="3" onkeypress="return numericOnly(this);" />
                    <img src="~/Image/Plus.png" id="btnAdd" title="Add Row" class="Help_image_buttonAddRemove" onclick="AddrowQTY('AddRowsMain')" />
                    <img src="~/Image/Minus.png" id="btnDelete" title="Delete Row" class="Help_image_buttonAddRemove" onclick="DeleteRowQTY()" />
                }
                <div class="col-md-8">
                    <input type="text" name="search" class="grid_title_box textbox_image" value="" placeholder="Filter" onkeyup="filterTable(event, '_T_SALE_PRODUCT_GRID');" />
                    <img src="~/Image/search.png" title="Help" />
                </div>
                <center style="font-size:11px;color:darkmagenta;border:1px inset;height: 21px;padding: 4px;">
                    <b>Genrate Qty Requirement</b>
                </center>
            </div>
            <div class="sticky-table sticky-ltr-cells">
                <div style="height:auto;overflow-y:scroll;max-height:235px;">
                    <table id="__T_OUTISSPROCESS_QtyRequirement_GRID" class="resizable table-striped" cellpadding="0px" cellspacing="0px" style="width: 1487px;">
                        <thead>
                            <tr class="sticky-header" style="height:30px;">
                                <th class="sticky-cell" style="width: 27px;"></th>
                                <th class="" style="width: 55px;text-align:center;">SL No.</th>
                                <th class="">Item Name</th>
                                <th class="" style="width:47px;">UOM</th>
                                <th class="" style="width:111px;text-align:right;">Quantity</th>
                                <th class="" style="width: 55px;text-align:center;">RSL No.</th>
                                <th class="">Group</th>
                                <th class="">Item Code</th>
                                <th class="">Item Name</th>
                                <th class="" style="width:47px;">UOM</th>
                                <th class="">Part</th>
                                <th class="" style="width: 59px;">Color Code</th>
                                <th class="">Color Name</th>
                                <th class="">Size</th>
                                <th class="" style="width:111px;text-align:right;">Bom Quantity</th>
                                <th class="" style="width:111px;text-align:right;">Extra Quantity</th>
                                <th class="" style="text-align:center;width: 27px;">Sample</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TPROGBOM != null)
                            {
                                for (int i = 0; i <= Model.TPROGBOM.Count - 1; i++)
                                {
                                    <tr style="font-size:12px; font-weight:bold;">
                                        <td class="sticky-cell" style="padding-left:7px;padding-right:7px;">
                                            @Html.CheckBoxFor(model => model.TPROGBOM[i].Checked, new { id = "chkid_" + i, @TabIndex = -1 })
                                            @*@Html.HiddenFor(model => model.TPROGBOM[i].BARNO, new { id = "BARNO_" + i })*@
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].SLNO, new { id = "SLNO_" + i, @class = " atextBoxFor ", @style = "text-align:center;", maxlength = 2, @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].ITNM, new { id = "RITNM1_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].UOM, new { id = "UOM1_" + i, @class = " atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.EditorFor(model => Model.TPROGBOM[i].QNTY, new { htmlAttributes = new { id = "QNTY1_" + i, @style = "text-align: right;", @onkeypress = "return numericOnly(this,3);", @class = " atextBoxFor", maxlength = 12, @TabIndex = -1, @readonly = "readonly" } })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].RSLNO, new { id = "RSLNO_" + i, @class = " atextBoxFor ", @style = "text-align:center;", maxlength = 2, @TabIndex = -1, @readonly = "readonly", onkeydown = "CopyAboveRow_TPROGBOM('" + i + "')" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].ITGRPNM, new { id = "ITGRPNM_" + i, maxlength = 8, onkeydown = "GetHelpBlur('" + @Url.Action("GetItemGroupDetails", "T_OUTISSPROCESS") + "','Group Details','" + "ITGRPNM_" + i + "','" + "ITGRPNM_" + i + "=itgrpnm=0/" + "ITGRPCD_" + i + "=itgrpcd=1');", onblur = "GetHelpBlur('" + @Url.Action("GetItemGroupDetails", "T_OUTISSPROCESS") + "','Group Details','" + "ITGRPNM_" + i + "','" + "ITGRPNM_" + i + "=itgrpnm=0/" + "ITGRPCD_" + i + "=itgrpcd=1');", @placeholder = "Code", @class = " atextBoxFor textbox_image" })
                                            <img src="~/Image/search.png" width="20px" height="20px" class="Help_image_button_grid" title="Help" onmousedown="GetHelpBlur('@Url.Action("GetItemGroupDetails", "T_OUTISSPROCESS")','Group Details','ITGRPNM_@i','ITGRPNM_@i=itgrpnm=0/ITGRPCD_@i=itgrpcd=1')" />
                                            @Html.HiddenFor(model => model.TPROGBOM[i].ITGRPCD, new { id = "ITGRPCD_" + i })
                                        </td>

                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].ITCD, new { id = "ITCD_" + i, maxlength = 8, onkeydown = "GetHelpBlur('" + @Url.Action("GetItemDetails", "T_OUTISSPROCESS") + "','Item Details','" + "ITCD_" + i + "','" + "ITCD_" + i + "=ITCD=2/" + "ITNM_" + i + "=ITNM=1/" + "UOM_" + i + "=UOM=3');", onblur = "GetHelpBlur('" + @Url.Action("GetItemDetails", "T_OUTISSPROCESS") + "','Item Details','" + "ITCD_" + i + "','" + "ITCD_" + i + "=ITCD=2/" + "ITNM_" + i + "=ITNM=1/" + "UOM_" + i + "=UOM=3');", @placeholder = "Code", @class = " atextBoxFor textbox_image" })
                                            <img src="~/Image/search.png" width="20px" height="20px" class="Help_image_button_grid" title="Help" onmousedown="GetHelpBlur('@Url.Action("GetItemDetails", "T_OUTISSPROCESS")','Item Details','ITCD_@i','ITCD_@i=ITCD=2/ITNM_@i=ITNM=1/UOM_@i=UOM=3')" />
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].ITNM, new { id = "ITNM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })

                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].UOM, new { id = "UOM_" + i, @class = " atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">

                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].PARTCD, new { id = "PARTCD_" + i, maxlength = 4, onkeydown = "GetHelpBlur('" + @Url.Action("GetPartDetails", "T_OUTISSPROCESS") + "','Part Details','" + "PARTCD_" + i + "','" + "PARTCD_" + i + "=PARTCD=1');", onblur = "GetHelpBlur('" + @Url.Action("GetItemGroupDetails", "T_OUTISSPROCESS") + "','Part Details','" + "PARTCD_" + i + "','" + "PARTCD_" + i + "=PARTCD=1');", @placeholder = "Code", @class = " atextBoxFor textbox_image" })
                                            <img src="~/Image/search.png" width="20px" height="20px" class="Help_image_button_grid" title="Help" onmousedown="GetHelpBlur('@Url.Action("GetPartDetails", "T_OUTISSPROCESS")','Part Details','PARTCD_@i','PARTCD_@i=PARTCD=1')" />

                                        </td>
                                        <td class="">

                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].COLRCD, new { id = "COLRCD_" + i, maxlength = 4, onkeydown = "GetHelpBlur('" + @Url.Action("GetColorDetails", "T_OUTISSPROCESS") + "','Color Details','" + "COLRCD_" + i + "','" + "COLRCD_" + i + "=COLRCD=1/" + "COLRNM_" + i + "=COLRNM=0');", onblur = "GetHelpBlur('" + @Url.Action("GetColorDetails", "T_OUTISSPROCESS") + "','Color Details','" + "COLRCD_" + i + "','" + "COLRCD_" + i + "=COLRCD=1/" + "COLRNM_" + i + "=COLRNM=0');", @placeholder = "Code", @class = " atextBoxFor textbox_image" })
                                            <img src="~/Image/search.png" width="20px" height="20px" class="Help_image_button_grid" title="Help" onmousedown="GetHelpBlur('@Url.Action("GetColorDetails", "T_OUTISSPROCESS")','Color Details','COLRCD_@i','COLRCD_@i=COLRCD=1/COLRNM_@i=COLRNM=0')" />
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].COLRNM, new { id = "COLRNM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].SIZECD, new { id = "SIZECD_" + i, maxlength = 4, onkeydown = "GetHelpBlur('" + @Url.Action("GetSizeDetails", "T_OUTISSPROCESS") + "','Size Details','" + "SIZECD_" + i + "','" + "SIZECD_" + i + "=SIZECD=1');", onblur = "GetHelpBlur('" + @Url.Action("GetSizeDetails", "T_OUTISSPROCESS") + "','Size Details','" + "SIZECD_" + i + "','" + "SIZECD_" + i + "=SIZECD=1');", @placeholder = "Code", @class = " atextBoxFor textbox_image" })
                                            <img src="~/Image/search.png" width="20px" height="20px" class="Help_image_button_grid" title="Help" onmousedown="GetHelpBlur('@Url.Action("GetSizeDetails", "T_OUTISSPROCESS")','Size Details','SIZECD_@i','SIZECD_@i=SIZECD=1')" />
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].BOMQNTY, new { id = "BOMQNTY_" + i, @class = " atextBoxFor ", @style = "text-align: right;", @onkeypress = "return numericOnly(this,3);", onblur = "CalculateTotalProgBomQnty();", maxlength = 12 })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TPROGBOM[i].EXTRAQNTY, new { id = "EXTRAQNTY_" + i, @class = " atextBoxFor ", @style = "text-align: right;", @onkeypress = "return numericOnly(this,3);", onblur = "CalculateTotalProgBomQnty();", maxlength = 12 })
                                        </td>
                                        <td class="" style="padding-left:14px;">
                                            @Html.CheckBoxFor(model => model.TPROGBOM[i].CheckedSample, new { id = "CheckedSample_" + i })
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="sticky-footer">
                                <td class="sticky-cell" style="width:27px;"> <input type="text" class="atextBoxFor" readonly="readonly" />  </td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td> @*RATE*@
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                @*<td><input type="text" class="atextBoxFor" readonly="readonly" /></td>*@
                                @*<td><input type="text" class="atextBoxFor" readonly="readonly" /></td>*@
                                <td style="text-align:right;"><input type="text" value="Total:" class="atextBoxFor" style="font-weight:bold;color:red;text-align:right;font-variant:petite-caps;" readonly="readonly" /></td>
                                <td style="text-align:right;">
                                    @Html.EditorFor(model => Model.T_BOMQNTY, new { htmlAttributes = new { id = "T_BOMQNTY", @class = "atextBoxFor text-right", style = "font-weight:bold;color:red;", @readonly = "readonly" } })
                                </td>
                                @*<td><input type="text" class="atextBoxFor" readonly="readonly" /></td>*@
                                <td style="text-align:right;">
                                    @Html.EditorFor(model => Model.T_EXTRAQNTY, new { htmlAttributes = new { id = "T_EXTRAQNTY", @class = "atextBoxFor text-right", style = "font-weight:bold;color:red;", @readonly = "readonly" } })
                                </td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }
    </div>
