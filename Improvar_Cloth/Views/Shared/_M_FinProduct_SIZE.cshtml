@model Improvar.ViewModels.ItemMasterEntry

<div style="width: 600px;" overflow-y:auto;">
    <div class="table-responsive">

        @if (Model.DefaultView == true)
        {
            @Html.ValidationSummary(true)
            <div class="grid_title">
                    <img src="~/Image/Plus.png" class="Help_image_buttonAddRemove" id="btnAdd" title="Add Row" onclick="AddRowSIZE()" />
                    <img src="~/Image/Minus.png" class="Help_image_buttonAddRemove" id="btnDelete" title="Delete Row" onclick="DeleteRowSIZE()" />

                <div class="col-md-8">
                    <input type="text" id="search" name="search" class="grid_title_box textbox_image" value="" placeholder="Filter" onkeyup="filterTable(event, 'exampleItemSize');" />
                    <img src="~/Image/search.png" title="Help" />
                </div>
                <center style="font-size: 11px;color: darkmagenta; border: 1px inset;"><b>Item Size Details</b></center>
            </div>
            
            <table id="exampleItemSize" class="resizable grid_table" cellpadding="0px" cellspacing="0px">
                <thead>
                    <tr style="height:30px;">
                        <th class="grid_th" style="width:27px;"></th>
                        <th class="grid_th" style="width:27px;">SL. No.</th>
                        <th class="grid_th" style="width:75px;">SIZE CODE</th>
                        <th class="grid_th" style="width:75px;">SIZE NAME</th>
                        <th class="grid_th" style="width:100px">BAR CODE</th>
                        <th class="grid_th" style="width:27px;">Inactive</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i <= Model.MSITEMSIZE.Count - 1; i++)
                {
                        <tr style="font-size:12px; font-weight:bold;">
                            <td class="grid_td" style="padding-left:7px;padding-right:7px;">
                                @Html.CheckBoxFor(model => model.MSITEMSIZE[i].Checked, new { htmlAttributes = new { id = "chkid" } })
                            </td>
                            <td class="grid_td">
                                @Html.TextBoxFor(model => Model.MSITEMSIZE[i].SRLNO, new { id = "SRLNO", @title = "Only Numeric", maxlength = 2, @class = " atextBoxFor " })
                            </td>
                            <td class="grid_td">
                                @Html.TextBoxFor(model => Model.MSITEMSIZE[i].SIZECD, new { id = "SIZECD_" + i, maxlength = 4, onkeyup = "GetHelp('" + @Url.Action("GetSizeDetails", "M_FinProduct") + "','" + "SIZECD_" + i + "/" + "SIZENM_" + i + "','1/0','Size Details','" + "SIZECD_" + i + "')", onblur = "SelectSIZECODE(this.value," + "SIZECD_" + i + "," + "SIZENM_" + i + ");",  @class = " atextBoxFor textbox_image" })
                                <img src="~/Image/search.png" width="20px" height="20px" class="Help_image_button_grid" title="Help" onclick="GetHelp('@Url.Action("GetSizeDetails", "M_FinProduct")','SIZECD_@i/SIZENM_@i','1/0','Size Details','SIZECD_@i')" />
                            </td>
                            <td class="grid_td">
                                @Html.TextBoxFor(model => Model.MSITEMSIZE[i].SIZENM, new { id = "SIZENM_" + i, maxlength = 10, @title = "Only For Display", @readonly = "readonly",  @class = " atextBoxFor " })
                            </td>
                            <td class="grid_td">
                                @Html.TextBoxFor(model => Model.MSITEMSIZE[i].BARCODE, new { id = "BARCODE", maxlength = 15,  @class = " atextBoxFor " })
                            </td>
                            <td class="grid_td" style="padding-left:7px;padding-right:7px;">
                                @Html.CheckBoxFor(model => model.MSITEMSIZE[i].IChecked, new { htmlAttributes = new { id = "IChecked_" } })
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        }

    </div>
</div>
