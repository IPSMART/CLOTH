                                <th class="" style="width:530px;">Remarks</th>
                                <th class="" style="width:590px;">Preferred Jobber-1</th>
                                <th class="" style="width:590px;">Preferred Jobber-2</th>
                                <th class="" style="width:590px;">Preferred Jobber-3</th>
                            </tr>
                        </thead>
