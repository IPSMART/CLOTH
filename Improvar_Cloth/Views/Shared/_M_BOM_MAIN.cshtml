                                        <td class="">
                                            @Html.TextBoxFor(model => Model.MSITEMBOMPART[i].MTRLCOST, new { id = "MTRLCOST_" + i, @class = " atextBoxFor ", @style = "text-align: right;", @onkeypress = "return numericOnly(this,2);", maxlength = 12 })
                                        </td>
