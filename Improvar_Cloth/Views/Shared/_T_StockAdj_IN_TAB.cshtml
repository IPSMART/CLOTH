@model Improvar.ViewModels.StockAdjustmentsConversionEntry
<script type="text/javascript">
    $(document).ready(function () {
        if ("@Model.DefaultAction" == "V" || "@Model.DefaultAction" == "D") { modeView(); }
        resizableTables[resizableTables.length] = new ColumnResize(document.getElementById('_T_StockAdj_IN_TAB_GRID'));
        $("td").on("mouseover", function (e) { var titlee = $(this).find("input").val(); $(this).attr('title', titlee); });
    });
</script>
<div style="transform: translate(0%, 0%);z-index: 1100;">
    <div class="table-responsive">
        @if (Model.DefaultView == true)
        {
            @Html.ValidationSummary(true)
            <div class="grid_title">
                <img src="~/Image/Minus.png" id="btnDelete" title="Delete Row" class="Help_image_button_grid" onclick="DeleteGridRow('IN_', '_T_StockAdj_IN_TAB_GRID')" />
                <img src="~/Image/Plus.png" id="btnAdd" title="Add Row" class="Help_image_button_grid" onclick="AddGridRow('IN_', '_T_StockAdj_IN_TAB_GRID');" />
                <div class="col-md-8">
                    <input type="text" name="search" class="grid_title_box textbox_image" value="" placeholder="Filter" onkeyup="filterTable(event, '_T_StockAdj_IN_TAB_GRID');" />
                    <img src="~/Image/search.png" title="Help" />
                </div>
                <center style="font-size: 11px;color: darkmagenta; border: 1px inset;text-align:left;"><b style="padding-left:350px;">In Item Details</b></center>
            </div>
            <div class="sticky-table sticky-ltr-cells">
                <div style="height:auto;overflow-y:scroll;overflow-x:hidden;max-height:218px;">
                    <table id="_T_StockAdj_IN_TAB_GRID" class="resizable table-striped">
                        <thead>
                            <tr class="sticky-header" style="height:20px;">
                                <th class="sticky-cell" style="width:27px;"></th>
                                <th class="" style="width:27px;text-align:center;">SL NO.</th>
                                <th class="" style="width:161px;">Barno</th>
                                <th class="" style="width:81px;">Group Code</th>
                                <th class="" style="width:177px;">Group Name</th>
                                <th class="" style="width:110px;">Item Code <b style="color:Red;">*</b></th>
                                <th class="" style="width:180px;">Item Name</th>
                                <th class="" style="width:40px;">UOM</th>
                                <th class="" style="width:70px">Stock Type</th>
                                @if (Model.M_SYSCNFG.MNTNPART == "Y")
                                {
                                    <th class="" style="width:60px;">Part Code</th>
                                    <th class="" style="width:90px;">Part Name</th>
                                }
                                @if (Model.M_SYSCNFG.MNTNCOLOR == "Y")
                                {
                                    <th class="" style="width: 50px;">Color Code</th>
                                    <th class="" style="width: 50px;">Color Name</th>
                                }
                                @if (Model.M_SYSCNFG.MNTNSIZE == "Y")
                                {
                                    <th class="" style="width:107px;">Size</th>
                                }
                                <th class="" style="width:90px;text-align:right;">Quantity</th>
                                <th class="" style="">MTRL JOBCD</th>
                                <th class="" style="">MTRL JOBNM</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TTXNDTL != null)
                            {
                                for (int i = 0; i <= Model.TTXNDTL.Count - 1; i++)
                                {
                                    <tr style="font-size:12px; font-weight:bold;">
                                        <td class="sticky-cell" style="padding-left:7px;padding-right:7px;">
                                            @Html.CheckBoxFor(model => model.TTXNDTL[i].Checked, new { id = "IN_CHECK_" + i })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].SLNO, new { id = "IN_SLNO_" + i, @class = "atextBoxFor text-center", maxlength = 4, @readonly = "readonly", @tabindex = -1 })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].BARNO, new { id = "IN_BARNO_" + i, maxlength = 20, onkeydown = "GetHelpBlur('" + @Url.Action("GetBarCodeDetailsGrid", "T_INISSPROCESS") + "','Barno Details','P_BARNO_" + i + "','P_BARNO_" + i + "=BARNO=0/P_MTRLJOBCD_" + i + "=MTRLJOBCD=2/P_PARTCD_" + i + "=PARTCD=8/P_ITCD_" + i + "=ITCD/P_ITNM_" + i + "=ITSTYLE/P_UOM_" + i + "=UOMCD/P_ITGRPCD_" + i + "=ITGRPCD/P_ITGRPNM_" + i + "=ITGRPNM/P_COLRCD_" + i + " =COLRCD/P_SIZECD_" + i + " =SIZECD/P_COLRNM_" + i + "=COLRNM/P_MTRLJOBNM_" + i + "=MTRLJOBNM/P_BarImages_" + i + "=BARIMAGE/BarImagesCount_" + i + "=barimagecount/P_DECIMALS_" + i + "=DECIMALS/P_CLRBARCODE_" + i + "=clrbarcode/P_SZBARCODE_" + i + "=szbarcode','P_MTRLJOBCD_" + i + "/P_PARTCD_" + i + "/DOCDT/TAXGRPCD/GOCD/PRCCD/P_MTRLJOBCD_" + i + "');RepeatAboveRow_TPROGBOM('" + i + "');", onblur = "GetHelpBlur('" + @Url.Action("GetBarCodeDetailsGrid", "T_INISSPROCESS") + "','Barno Details','P_BARNO_" + i + "','P_BARNO_" + i + "=BARNO=0/P_MTRLJOBCD_" + i + "=MTRLJOBCD=2/P_PARTCD_" + i + "=PARTCD=8/P_ITCD_" + i + "=ITCD/P_ITNM_" + i + "=ITSTYLE/P_UOM_" + i + "=UOMCD/P_ITGRPCD_" + i + "=ITGRPCD/P_ITGRPNM_" + i + "=ITGRPNM/P_COLRCD_" + i + " =COLRCD/P_SIZECD_" + i + " =SIZECD/P_COLRNM_" + i + "=COLRNM/P_MTRLJOBNM_" + i + "=MTRLJOBNM/P_BarImages_" + i + "=BARIMAGE/BarImagesCount_" + i + "=barimagecount/P_DECIMALS_" + i + "=DECIMALS/P_CLRBARCODE_" + i + "=clrbarcode/P_SZBARCODE_" + i + "=szbarcode','P_MTRLJOBCD_" + i + "/P_PARTCD_" + i + "/DOCDT/TAXGRPCD/GOCD/PRCCD/P_MTRLJOBCD_" + i + "');", @class = " atextBoxFor textbox_image" })
                                            <img src="~/Image/search.png" width="20px" height="20px" class="Help_image_button_grid" title="Help" onmousedown="GetHelpBlur('@Url.Action("GetBarCodeDetailsGrid", "T_INISSPROCESS")','Barno Details','P_BARNO_@i','P_BARNO_@i=BARNO=0/P_MTRLJOBCD_@i=MTRLJOBCD=2/P_PARTCD_@i=PARTCD=8/P_ITCD_@i=ITCD/P_ITNM_@i=ITSTYLE/P_UOM_@i=UOMCD/P_ITGRPCD_@i=ITGRPCD/P_ITGRPNM_@i=ITGRPNM/P_COLRCD_@i =COLRCD/P_SIZECD_@i =SIZECD/P_COLRNM_@i=COLRNM/P_MTRLJOBNM_@i=MTRLJOBNM/P_BarImages_@i=BARIMAGE/BarImagesCount_@i=barimagecount/P_DECIMALS_@i=DECIMALS/P_CLRBARCODE_@i=clrbarcode/P_SZBARCODE_@i=szbarcode','P_MTRLJOBCD_@i/P_PARTCD_@i/DOCDT/TAXGRPCD/GOCD/PRCCD/P_MTRLJOBCD_@i');" />
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].ITGRPCD, new { id = "IN_ITGRPCD_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].ITGRPNM, new { id = "IN_ITGRPNM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].ITCD, new { id = "IN_ITCD_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].ITNM, new { id = "IN_ITNM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].UOM, new { id = "IN_UOM_" + i, @class = " atextBoxFor ", maxlength = 5, @readonly = "readonly", @tabindex = -1 })
                                        </td>
                                        <td class="">
                                            @Html.DropDownListFor(model => Model.TTXNDTL[i].STKTYPE, new SelectList(Model.TTXNDTL[i].DropDown_list2, "value", "text", Model.TTXNDTL[i].STKTYPE), new { id = "IN_STKTYPE_" + i, @class = "atextBoxFor select_3d" })
                                        </td>
                                        @if (Model.M_SYSCNFG.MNTNPART == "Y")
                                        {
                                            <td>
                                                @Html.TextBoxFor(model => Model.TTXNDTL[i].PARTCD, new { id = "IN_PARTCD_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                            </td>
                                            <td>
                                                @Html.TextBoxFor(model => model.TTXNDTL[i].PARTNM, new { @class = "atextBoxFor", id = "IN_PARTNMM_" + i, maxlength = 15, @readonly = "readonly", @tabindex = -1 })
                                                @Html.HiddenFor(model => model.TTXNDTL[i].PRTBARCODE, new { id = "IN_PRTBARCODE_" + i })
                                            </td>
                                        }
                                        @if (Model.M_SYSCNFG.MNTNCOLOR == "Y")
                                        {
                                            <td class="">
                                                @Html.TextBoxFor(model => Model.TTXNDTL[i].COLRCD, new { id = "IN_COLRCD_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                                @Html.HiddenFor(model => model.TTXNDTL[i].CLRBARCODE, new { id = "IN_CLRBARCODE_" + i })
                                            </td>
                                            <td class="">
                                                @Html.TextBoxFor(model => Model.TTXNDTL[i].COLRNM, new { id = "IN_COLRNM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                            </td>}
                                        @if (Model.M_SYSCNFG.MNTNSIZE == "Y")
                                        {
                                            <td class="">
                                                @Html.TextBoxFor(model => Model.TTXNDTL[i].SIZECD, new { id = "IN_SIZECD_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                                @Html.HiddenFor(model => model.TTXNDTL[i].SIZENM, new { id = "IN_SIZENM_" + i })
                                                @Html.HiddenFor(model => model.TTXNDTL[i].SZBARCODE, new { id = "IN_SZBARCODE_" + i })
                                            </td>}
                                        <td>
                                            @Html.TextBoxFor(model => model.TTXNDTL[i].QNTY, "{0:0.000}", new { id = "IN_QNTY_" + i, @class = "atextBoxFor text-right", @onkeypress = "return numericOnly(this,3);", maxlength = 12 })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].MTRLJOBCD, new { @class = "atextBoxFor textbox_image", id = "IN_MTRLJOBCD_" + i, onkeyup = "GetHelp('" + @Url.Action("GetMtrlJobDetails", "T_INRECPROCESS") + "','" + "IN_MTRLJOBCD_" + i + "/" + "IN_MTRLJOBNM_" + i + "','1/0','Part Details','" + "IN_MTRLJOBCD_" + i + "')", onblur = "SelectMtrlJobCode(this.value," + "IN_MTRLJOBCD_" + i + "," + "IN_MTRLJOBNM_" + i + ");", maxlength = 4 })
                                            <img src="~/Image/search.png" width="20px" class="Help_image_button_grid" height="20px" title="Help" onclick="GetHelp('@Url.Action("GetMtrlJobDetails", "T_INRECPROCESS")','IN_MTRLJOBCD_@i/IN_MTRLJOBNM_@i','1/0','Part Details','IN_MTRLJOBCD_@i')" />
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.TTXNDTL[i].MTRLJOBNM, new { @class = "atextBoxFor", id = "IN_MTRLJOBNM_" + i, maxlength = 15 })
                                            @Html.HiddenFor(model => model.TTXNDTL[i].MTBARCODE, new { id = "IN_MTBARCODE_" + i })


                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="sticky-footer">
                                <td class="sticky-cell"><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td style="text-align:right;"><input type="text" value="Total:" class="atextBoxFor" style="font-weight:bold;color:red;text-align:right;font-variant:petite-caps;" readonly="readonly" /></td>
                                <td style="text-align:right;">
                                    @Html.TextBoxFor(model => Model.IN_T_QNTY, "{0:0.000}", new { id = "IN_T_QNTY", @class = "atextBoxFor text-right", style = "font-weight:bold;", @readonly = "readonly" })
                                </td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        }

    </div>
</div>

