@model Improvar.ViewModels.StockAdjustmentsConversionEntry
<script type="text/javascript">
    $(document).ready(function () {
        if ("@Model.DefaultAction" == "V" || "@Model.DefaultAction" == "D") { modeView(); }
        resizableTables[resizableTables.length] = new ColumnResize(document.getElementById('_T_StockAdj_IN_TAB_GRID'));
        $("td").on("mouseover", function (e) { var titlee = $(this).find("input").val(); $(this).attr('title', titlee); });
    });
</script>
<div style="transform: translate(0%, 0%);z-index: 1100;">
    <div class="table-responsive">
        @if (Model.DefaultView == true)
        {
            @Html.ValidationSummary(true)
            <div class="grid_title">
                <img src="~/Image/Minus.png" id="btnDelete" title="Delete Row" class="Help_image_button_grid" onclick="DeleteGridRow('IN_', '_T_StockAdj_IN_TAB_GRID')" />
                <img src="~/Image/Plus.png" id="btnAdd" title="Add Row" class="Help_image_button_grid" onclick="AddGridRow('IN_', '_T_StockAdj_IN_TAB_GRID');" />
                <div class="col-md-8">
                    <input type="text" name="search" class="grid_title_box textbox_image" value="" placeholder="Filter" onkeyup="filterTable(event, '_T_StockAdj_IN_TAB_GRID');" />
                    <img src="~/Image/search.png" title="Help" />
                </div>
                <center style="font-size: 11px;color: darkmagenta; border: 1px inset;text-align:left;"><b style="padding-left:350px;">In Item Details</b></center>
            </div>
            <div class="sticky-table sticky-ltr-cells">
                <div style="height:auto;overflow-y:scroll;overflow-x:hidden;max-height:218px;">
                    <table id="_T_StockAdj_IN_TAB_GRID" class="resizable table-striped">
                        <thead>
                            <tr class="sticky-header" style="height:20px;">
                                <th class="sticky-cell" style="width:27px;"></th>
                                <th class="" style="width:57px;text-align:center;">SL NO.</th>
                                <th class="" style="width:110px;">Article Number</th>
                                <th class="" style="width:100px;">Item Code</th>
                                <th class="" style="width:300px;">Item Name</th>
                                <th class="" style="width:45px">Pcs. / Box</th>
                                <th class="" style="width:40px;">UOM</th>
                                <th class="" style="width:70px">Stock Type</th>
                                <th class="" style="width:60px;">Part Code</th>
                                <th class="" style="width:90px;">Part Name</th>
                                @*<th class="" style="width:50px;">Color Code</th>
                                    <th class="" style="width:90px;">Color Name</th>*@
                                <th class="" style="width:90px;text-align:right;">Quantity</th>
                                <th class="" style="width:75px;text-align:right;">Boxes</th>
                                <th class="" style="width:75px;text-align:right;">Sets</th>
                                <th class="" style="width:200px">Sizes</th>
                                <th class="" style="">MTRL JOBCD</th>
                                <th class="" style="">MTRL JOBNM</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TTXNDTL != null)
                            {
                                for (int i = 0; i <= Model.TTXNDTL.Count - 1; i++)
                                {
                                    <tr style="font-size:12px; font-weight:bold;">
                                        <td class="sticky-cell" style="padding-left:7px;padding-right:7px;">
                                            @Html.CheckBoxFor(model => model.TTXNDTL[i].Checked, new { id = "IN_CHECK_" + i })
                                            @*@Html.HiddenFor(model => model.TTXNDTL[i].ChildData, new { id = "IN_ChildData_" + i, Value = @Model.TTXNDTL[i].ChildData })*@
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].SLNO, new { id = "IN_SLNO_" + i, @class = "atextBoxFor text-center", maxlength = 4, @readonly = "readonly", @tabindex = -1 })
                                            @Html.HiddenFor(model => Model.TTXNDTL[i].COLRCD, new { id = "IN_COLRCD_" + i })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].STYLENO, new { id = "IN_STYLENO_" + i, onkeyup = "GetHelp('" + @Url.Action("GetArticleItemDetails", "T_StockAdj") + "','" + "IN_STYLENO_" + i + "/" + "IN_ITNM_" + i + "/" + "IN_ITCD_" + i + "/" + "IN_UOMNM_" + i + "/" + "IN_PCSBOX_" + i + "','0/1/2/3/4','ArticleWise Item Details','" + "IN_ITCD_" + i + "','A');", onblur = "SelectArticleItemCode(this.value,'IN_STYLENO_" + i + "','IN_ITCD_" + i + "','IN_ITNM_" + i + "','IN_UOMNM_" + i + "','IN_PCSBOX_" + i + "','A');", maxlength = 12, @class = "atextBoxFor textbox_image" })
                                            <img src="~/Image/search.png" class="Help_image_button_grid" width="20px" height="20px" title="Help" onclick="GetHelp('@Url.Action("GetArticleItemDetails", "T_StockAdj" )','IN_STYLENO_@i/IN_ITNM_@i/IN_ITCD_@i/IN_UOMNM_@i/IN_PCSBOX_@i','0/1/2/3/4','ArticleWise Item Details','IN_ITCD_@i','A')" />
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].ITCD, new { id = "IN_ITCD_" + i, onkeyup = "GetHelp('" + @Url.Action("GetArticleItemDetails", "T_StockAdj") + "','" + "IN_STYLENO_" + i + "/" + "IN_ITNM_" + i + "/" + "IN_ITCD_" + i + "/" + "IN_UOMNM_" + i + "/" + "IN_PCSBOX_" + i + "','0/1/2/3/4','ArticleWise Item Details','" + "IN_ITCD_" + i + "','C');", onblur = "SelectArticleItemCode(this.value,'IN_STYLENO_" + i + "','IN_ITCD_" + i + "','IN_ITNM_" + i + "','IN_UOMNM_" + i + "','IN_PCSBOX_" + i + "','C');", maxlength = 10, @class = "atextBoxFor textbox_image" })
                                            <img src="~/Image/search.png" class="Help_image_button_grid" width="20px" height="20px" title="Help" onclick="GetHelp('@Url.Action("GetArticleItemDetails", "T_StockAdj" )','IN_STYLENO_@i/IN_ITNM_@i/IN_ITCD_@i/IN_UOMNM_@i/IN_PCSBOX_@i','0/1/2/3/4','ArticleWise Item Details','IN_ITCD_@i','C')" />
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].ITNM, new { id = "IN_ITNM_" + i, @class = " atextBoxFor ", maxlength = 60, @readonly = "readonly", @tabindex = -1 })
                                        </td>
                                        <td>
                                            @*@Html.TextBoxFor(model => model.TTXNDTL[i].PCSBOX, new { id = "IN_PCSBOX_" + i, @class = "atextBoxFor text-right", @readonly = "readonly", @tabindex = -1 })*@
                                            @*@Html.HiddenFor(model => model.TTXNDTL[i].PCSPERSET, new { id = "IN_PCSPERSET_" + i })*@
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].UOM, new { id = "IN_UOMNM_" + i, @class = " atextBoxFor ", maxlength = 5, @readonly = "readonly", @tabindex = -1 })
                                        </td>
                                        <td class="">
                                            @Html.DropDownListFor(model => Model.TTXNDTL[i].STKTYPE, new SelectList(Model.TTXNDTL[i].DropDown_list2, "value", "text", Model.TTXNDTL[i].STKTYPE), new { id = "IN_STKTYPE_" + i, @class = "atextBoxFor select_3d" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.TTXNDTL[i].PARTCD, new { @class = "atextBoxFor textbox_image", id = "IN_PARTCDM_" + i, onkeyup = "GetHelp('" + @Url.Action("GetPartDetails", "T_StockAdj") + "','" + "IN_PARTCDM_" + i + "/" + "IN_PARTNMM_" + i + "','1/0','Part Details','" + "IN_PARTCDM_" + i + "')", onblur = "GetCodeBlurData(this.value,'" + "IN_PARTCDM_" + i + "','" + "IN_PARTNMM_" + i + "','GetPartDetails');", maxlength = 4 })
                                            <img src="~/Image/search.png" width="20px" class="Help_image_button_grid" height="20px" title="Help" onclick="GetHelp('@Url.Action("GetPartDetails", "T_StockAdj")','IN_PARTCDM_@i/IN_PARTNMM_@i','1/0','Part Details','IN_PARTCDM_@i')" />
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.TTXNDTL[i].PARTNM, new { @class = "atextBoxFor", id = "IN_PARTNMM_" + i, maxlength = 15, @readonly = "readonly", @tabindex = -1 })
                                        </td>
                                        @*<td>
                                                @Html.TextBoxFor(model => model.TTXNDTL[i].COLRCD, new { @class = "atextBoxFor textbox_image", id = "IN_COLRCDM_" + i, onkeyup = "GetHelp('" + @Url.Action("GetColorDetails", "T_OUTISSPROCESS") + "','" + "IN_COLRCDM_" + i + "/" + "IN_COLRNMM_" + i + "','1/0','Color Details','" + "IN_COLRCDM_" + i + "')", onblur = "SelectPartColorSizeCode(this.value,'" + "IN_COLRCDM_" + i + "','" + "IN_COLRNMM_" + i + "','GetColorDetails');", maxlength = 4 })
                                                <img src="~/Image/search.png" width="20px" class="Help_image_button_grid" height="20px" title="Help" onclick="GetHelp('@Url.Action("GetColorDetails", "T_OUTISSPROCESS")','IN_COLRCDM_@i/IN_COLRNMM_@i','1/0','Color Details','IN_COLRCDM_@i')" />
                                            </td>
                                            <td>
                                                @Html.TextBoxFor(model => model.TTXNDTL[i].COLRNM, new { @class = "atextBoxFor", id = "IN_COLRNMM_" + i, maxlength = 20, @readonly = "readonly", @tabindex = -1 })
                                            </td>*@
                                        <td>
                                            @Html.TextBoxFor(model => model.TTXNDTL[i].QNTY, "{0:0.000}", new { id = "IN_QNTY_" + i, @class = "atextBoxFor text-right", @onkeypress = "return numericOnly(this,3);", maxlength = 12 })
                                        </td>
                                        <td class="">
                                            @*@Html.TextBoxFor(model => Model.TTXNDTL[i].BOXES, new { id = "IN_BOXES_" + i, @style = "text-align: right;", @class = " atextBoxFor", @TabIndex = -1, @readonly = "readonly" })*@
                                        </td>
                                        <td class="">
                                            @*@Html.TextBoxFor(model => Model.TTXNDTL[i].SETS, new { id = "IN_SETS_" + i, @style = "text-align: right;", @class = " atextBoxFor", @TabIndex = -1, @readonly = "readonly" })*@
                                        </td>
                                        <td class="">
                                            @*@Html.TextBoxFor(model => Model.TTXNDTL[i].ALL_SIZE, new { id = "IN_ALL_SIZE_" + i, onclick = "OpenSize('IN_'," + i + ",'OPENSIZE');", @class = "atextBoxFor", @readonly = "readonly" })*@
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => Model.TTXNDTL[i].MTRLJOBCD, new { @class = "atextBoxFor textbox_image", id = "IN_MTRLJOBCD_" + i, onkeyup = "GetHelp('" + @Url.Action("GetMtrlJobDetails", "T_OUTRECPROCESS") + "','" + "IN_MTRLJOBCD_" + i + "/" + "IN_MTRLJOBNM_" + i + "','1/0','Part Details','" + "IN_MTRLJOBCD_" + i + "')", onblur = "SelectMtrlJobCode(this.value," + "IN_MTRLJOBCD_" + i + "," + "IN_MTRLJOBNM_" + i + ");", maxlength = 4 })
                                            <img src="~/Image/search.png" width="20px" class="Help_image_button_grid" height="20px" title="Help" onclick="GetHelp('@Url.Action("GetMtrlJobDetails", "T_OUTRECPROCESS")','IN_MTRLJOBCD_@i/IN_MTRLJOBNM_@i','1/0','Part Details','IN_MTRLJOBCD_@i')" />
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.TTXNDTL[i].MTRLJOBNM, new { @class = "atextBoxFor", id = "IN_MTRLJOBNM_" + i, maxlength = 15 })
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="sticky-footer">
                                <td class="sticky-cell"><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                @*<td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                    <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>*@
                                <td style="text-align:right;"><input type="text" value="Total:" class="atextBoxFor" style="font-weight:bold;color:red;text-align:right;font-variant:petite-caps;" readonly="readonly" /></td>
                                <td style="text-align:right;">
                                    @Html.TextBoxFor(model => Model.IN_T_QNTY, "{0:0.000}", new { id = "IN_T_QNTY", @class = "atextBoxFor text-right", style = "font-weight:bold;", @readonly = "readonly" })
                                </td>
                                <td style="text-align:right;">
                                    @Html.TextBoxFor(model => Model.TOTAL_IN_BOXES, new { id = "IN_TOTAL_BOXES", @class = "atextBoxFor text-right", @style = "font-weight:bold;", @readonly = "readonly" })
                                </td>
                                <td style="text-align:right;">
                                    @Html.TextBoxFor(model => Model.TOTAL_IN_SETS, new { id = "IN_TOTAL_SETS", @class = "atextBoxFor text-right", @style = "font-weight:bold;", @readonly = "readonly" })
                                </td>
                                <td class=""><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        }

    </div>
</div>

