@model Improvar.ViewModels.SalesOrderEntry
@{
    string USER = Session["UR_ID"].ToString();
}
<script type="text/javascript">
    $(document).ready(function () {
        resizableTables[resizableTables.length] = new ColumnResize(document.getElementById('_T_SORD_MAIN_GRID'));
        $("td").on("mouseover", function (e) { var titlee = $(this).find("input").val(); $(this).attr('title', titlee); });
        @*if ("@ViewBag.msgDuplicateitem" != "") {
            //msgInfo(result);
            message_value = "ARTNO_" + "@ViewBag.msgDuplicateitem";
        }*@
    });

</script>
<div style="transform: translate(0%, 0%);z-index: 1100;">
    <div class="table-responsive">
        @if (Model.DefaultView == true)
        {
            @Html.ValidationSummary(true)
            <div class="grid_title">
                <input type="text" id="AddRowsMain" name="AddRowsMain" placeholder="rows" style="font-size: 11px;font-weight: bold;width:40px;height:17px;float:left;padding: 2px;" maxlength="3" onkeypress="return numericOnly(this);" />
                <img src="~/Image/Plus.png" id="btnAddMain" title="Add Row" class="Help_image_buttonAddRemove" onclick="AddRow('AddRowsMain')" />
                <img src="~/Image/Minus.png" id="btnDeleteMain" title="Delete Row" class="Help_image_buttonAddRemove" onclick="DeleteRow()" />
                <div class="col-md-8">
                    <input type="text" name="search" class="grid_title_box textbox_image" value="" placeholder="Filter" onkeyup="filterTable(event, '_T_SORD_MAIN_GRID');" />
                    <img src="~/Image/search.png" title="Help" />
                </div>
                <center style="font-size:11px;color:darkmagenta;border:1px inset;height: 21px;padding: 4px;">
                    <b>Sales Order Entry Item Details</b>
                    <a style="color: red;font-variant: petite-caps;font-weight: bolder;"><b style="float:right;margin-right:30px;">Click to Copy First Row Stock Type to All Rows <input type="button" id="SAME_STKTYPE" class="btn btn-success" value="Copy" onclick="CopyStkType();" name="SAME_STKTYPE" style="float: right;margin-top: -4px;height: 18px;width: 40px;font-size: 11px;font-weight: bolder;padding: 1px;margin-left: 5px;" /></b></a>
                </center>
            </div>
            <div class="sticky-table sticky-ltr-cells">
                <div style="height:auto;overflow-y:scroll;overflow-x:hidden;max-height:235px;">
                    <table id="_T_SORD_MAIN_GRID" class="resizable table-striped" cellpadding="0px" cellspacing="0px">
                        <thead>
                            <tr class="sticky-header" style="height:30px;">
                                <th class="sticky-cell" style="width: 27px;"></th>
                                <th class="" style="width: 27px;text-align:center;">SL No.</th>
                                <th class="" style="width: 90px;">Article</th>
                                <th class="" style="width: 240px;">Item Name</th>
                                <th class="" style="width:31px;">Pcs/ Box</th>
                                <th class="" style="width:32px;">UOM</th>
                                <th class="" style="width:40px;text-align:right;">No Of Sets</th>
                                <th class="" style="width:75px;text-align:right;">Quantity</th>
                                <th class="" style="width:70px;text-align:right;">Boxes</th>
                                <th class="" style="width:70px;text-align:right;">Sets</th>
                                <th class="" style="width:240px;">Rate</th>
                                <th class="" style="width:150px;">Sizes</th>
                                <th class="" style="width:65px;">Stock Type</th>
                                <th class="" style="width:40px;">Free</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TSORDDTL != null)
                            {
                                for (int i = 0; i <= Model.TSORDDTL.Count - 1; i++)
                                {
                                    <tr style="font-size:12px; font-weight:bold;">
                                        <td class="sticky-cell" style="padding-left:7px;padding-right:7px;">
                                            @Html.CheckBoxFor(model => model.TSORDDTL[i].Checked, new { id = "chkid_" + i, @TabIndex = -1 })
                                            @Html.HiddenFor(model => model.TSORDDTL[i].ChildData, new { id = "ChildData_" + i, Value = @Model.TSORDDTL[i].ChildData })
                                            @Html.HiddenFor(model => model.TSORDDTL[i].AMOUNT, new { id = "AMOUNT_" + i })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TSORDDTL[i].SLNO, new { id = "SLNO_" + i, @class = " atextBoxFor ", @style = "text-align:center;", maxlength = 2, @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TSORDDTL[i].ARTNO, new { id = "ARTNO_" + i, onkeyup = "GetHelp('" + @Url.Action("GetArticleItem", "T_SORD") + "','" + "ARTNO_" + i + "/" + "ITCD_" + i + "/" + "ITNM_" + i + "/" + "UOM_" + i + "/" + "TOTAL_PCS_" + i + "','0/2/1/3/4','Article Details','" + "ARTNO_" + i + "');toUpper(this);", onblur = "SelectArticleCode(this.value," + "ARTNO_" + i + "," + "ITNM_" + i + "," + "ITCD_" + i + "," + "UOM_" + i + "," + "TOTAL_PCS_" + i + "," + "PCSPERSET_" + i + ",'" + i + "');CheckArticleItem(this," + i + ",ITCD_" + i + ",ITNM_" + i + ",TOTAL_PCS_" + i + ",PCSPERSET_" + i + ",UOM_" + i + ", STKTYPE_" + i + ".value,FREESTK_" + i + ".value);", @class = " atextBoxFor textbox_image", @style = "padding-right: 21px;", maxlength = 12 })
                                            <img src="~/Image/search.png" class="Help_image_button_grid" width="20px" height="20px" title="Help" onclick="GetHelp('@Url.Action("GetArticleItem", "T_SORD")','ARTNO_@i/ITCD_@i/ITNM_@i/UOM_@i/TOTAL_PCS_@i','0/2/1/3/4','Article Deatils','ARTNO_@i')" />
                                            @Html.HiddenFor(model => model.TSORDDTL[i].ITCD, new { id = "ITCD_" + i })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => model.TSORDDTL[i].ITNM, new { id = "ITNM_" + i, @class = " atextBoxFor ", maxlength = 60, @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TSORDDTL[i].TOTAL_PCS, new { id = "TOTAL_PCS_" + i, maxlength = 2, @style = "text-align:right;", @class = " atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                            @Html.HiddenFor(model => model.TSORDDTL[i].PCSPERSET, new { id = "PCSPERSET_" + i })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TSORDDTL[i].UOM, new { id = "UOM_" + i, @class = " atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TSORDDTL[i].NOOFSETS, new { id = "NOOFSETS_" + i, onblur = "OpenSize(this.value,'" + "SLNO_" + i + "','" + "ITCD_" + i + "','" + "ITNM_" + i + "','" + "PCSPERSET_" + i + "','" + "ARTNO_" + i + "','" + "UOM_" + i + "','" + "TOTAL_PCS_" + i + "',NOOFSETS_" + i + ".value,'" + "STKTYPE_" + i + "','" + "FREESTK_" + i + "','0');", @style = "text-align: right;", @class = " atextBoxFor", maxlength = 10, @onkeypress = "return numericOnly(this,5);" })
                                        </td>
                                        <td class="">
                                            @Html.EditorFor(model => Model.TSORDDTL[i].QNTY, new { htmlAttributes = new { id = "QNTY_" + i, @style = "text-align: right;", onclick = "OpenSize(this.value,'" + "SLNO_" + i + "','" + "ITCD_" + i + "','" + "ITNM_" + i + "','" + "PCSPERSET_" + i + "','" + "ARTNO_" + i + "','" + "UOM_" + i + "','" + "TOTAL_PCS_" + i + "',NOOFSETS_" + i + ".value,'" + "STKTYPE_" + i + "','" + "FREESTK_" + i + "','1');", onkeydown = "OpenSize(this.value,'" + "SLNO_" + i + "','" + "ITCD_" + i + "','" + "ITNM_" + i + "','" + "PCSPERSET_" + i + "','" + "ARTNO_" + i + "','" + "UOM_" + i + "','" + "TOTAL_PCS_" + i + "',NOOFSETS_" + i + ".value,'" + "STKTYPE_" + i + "','" + "FREESTK_" + i + "','1');", @TabIndex = -1, @class = " atextBoxFor", maxlength = 12 } })
                                        </td>
                                        <td class="">
                                            @Html.EditorFor(model => Model.TSORDDTL[i].BOXES, new { htmlAttributes = new { id = "BOXES_" + i, @style = "text-align: right;", @class = " atextBoxFor", @TabIndex = -1, @readonly = "readonly" } })
                                        </td>
                                        <td class="">
                                            @Html.EditorFor(model => Model.TSORDDTL[i].SETS, new { htmlAttributes = new { id = "SETS_" + i, @style = "text-align: right;", @class = " atextBoxFor", @TabIndex = -1, @readonly = "readonly" } })
                                        </td>
                                        <td class="">
                                            @Html.EditorFor(model => Model.TSORDDTL[i].RATE_DISPLAY, new { htmlAttributes = new { id = "RATE_DISPLAY_" + i, @class = " atextBoxFor", @style = "text-align: right;", @TabIndex = -1, maxlength = 12, @onkeypress = "return numericOnly(this,2);", @readonly = "readonly" } })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.TSORDDTL[i].ALL_SIZE, new { id = "ALL_SIZE_" + i, @class = " atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.DropDownListFor(model => Model.TSORDDTL[i].STKTYPE, new SelectList(Model.TSORDDTL[i].DropDown_list2, "value", "text", Model.TSORDDTL[i].STKTYPE), new { id = "STKTYPE_" + i, @onchange = "CalculateBoxSets('" + i + "');", @class = "atextBoxFor select_3d", @TabIndex = -1 })
                                        </td>
                                        <td class="">
                                            @Html.DropDownListFor(model => Model.TSORDDTL[i].FREESTK, new SelectList(Model.TSORDDTL[i].DropDown_list3, "value", "text", Model.TSORDDTL[i].FREESTK), new { id = "FREESTK_" + i, @class = "atextBoxFor select_3d", @TabIndex = -1 })
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="sticky-footer">
                                <td class="sticky-cell" style="width:27px;"> <input type="text" class="atextBoxFor" readonly="readonly" />  </td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td style="text-align:right;"><input type="text" value="Total:" class="atextBoxFor" style="font-weight:bold;color:red;text-align:right;font-variant:petite-caps;" readonly="readonly" /></td>
                                <td style="text-align:right;">
                                    @Html.EditorFor(model => Model.TOTAL_NOOFSETS, new { htmlAttributes = new { id = "TOTAL_NOOFSETS", @class = "atextBoxFor", @style = "text-align: right;font-weight:bold;", @readonly = "readonly" } })
                                </td>
                                <td style="text-align:right;">
                                    @Html.EditorFor(model => Model.TOTAL_QNTY, new { htmlattributes = new { id = "TOTAL_QNTY", @class = "atextBoxFor", @style = "text-align: right;font-weight:bold;", @readonly = "readonly" } })
                                </td>
                                <td style="text-align:right;">
                                    @Html.EditorFor(model => Model.TOTAL_BOXES, new { htmlattributes = new { id = "TOTAL_BOXES", @class = "atextBoxFor", @style = "text-align: right;font-weight:bold;", @readonly = "readonly" } })
                                </td>
                                <td style="text-align:right;">
                                    @Html.EditorFor(model => Model.TOTAL_SETS, new { htmlattributes = new { id = "TOTAL_SETS", @class = "atextBoxFor", @style = "text-align: right;font-weight:bold;", @readonly = "readonly" } })
                                </td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td> @*RATE*@
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                                <td><input type="text" class="atextBoxFor" readonly="readonly" /></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        }
    </div>
</div>
