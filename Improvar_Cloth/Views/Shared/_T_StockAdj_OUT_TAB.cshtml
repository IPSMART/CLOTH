                                            @*@Html.TextBoxFor(model => Model.TTXNDTL_OUT[i].ALL_SIZE, new { id = "OUT_ALL_SIZE_" + i, onclick = "OpenSize('OUT_'," + i + ",'OPENSIZE_OUT');", @class = "atextBoxFor", @readonly = "readonly" })*@
