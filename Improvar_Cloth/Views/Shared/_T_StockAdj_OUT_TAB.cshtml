                                                <img src="~/Image/search.png" width="20px" class="Help_image_button_grid" height="20px" title="Help" onclick="GetHelp('@Url.Action("GetColorDetails", "T_OUTISSPROCESS")','OUT_COLRCDM_@i/OUT_COLRNMM_@i','1/0','Color Details','OUT_COLRCDM_@i')" />
                                            </td>
                                            <td>
                                                @Html.TextBoxFor(model => model.TTXNDTL_OUT[i].COLRNM, new { @class = "atextBoxFor", id = "OUT_COLRNMM_" + i, maxlength = 20, @readonly = "readonly", @tabindex = -1 })
