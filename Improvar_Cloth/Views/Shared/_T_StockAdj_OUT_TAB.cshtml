                                        </td>
                                        <td class="">
                                            @*@Html.TextBoxFor(model => Model.TTXNDTL_OUT[i].SETS, new { id = "OUT_SETS_" + i, @style = "text-align: right;", @class = " atextBoxFor", @TabIndex = -1, @readonly = "readonly" })*@
