                                        <td>
                                            @Html.TextBoxFor(model => Model.TTXNDTL_OUT[i].MTRLJOBCD, new { @class = "atextBoxFor textbox_image", id = "OUT_MTRLJOBCD_" + i, onkeyup = "GetHelp('" + @Url.Action("GetMtrlJobDetails", "T_OUTRECPROCESS") + "','" + "OUT_MTRLJOBCD_" + i + "/" + "OUT_MTRLJOBNM_" + i + "','1/0','Part Details','" + "OUT_MTRLJOBCD_" + i + "')", onblur = "SelectMtrlJobCode(this.value," + "OUT_MTRLJOBCD_" + i + "," + "OUT_MTRLJOBNM_" + i + ");", maxlength = 4 })
