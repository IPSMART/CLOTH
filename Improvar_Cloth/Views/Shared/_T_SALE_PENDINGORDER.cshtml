@model Improvar.ViewModels.TransactionPackingSlipEntry
@{
    var haspendorddata = "";
}
<script>
    $("#popup").ready(function () {
        $("#dragclass").draggable({ cursor: "move" });
    });

</script>
<script type="text/javascript">
    $(document).ready(function () {
        if ("@Model.DefaultAction" == "V" || "@Model.DefaultAction" == "D") { modeView(); }
        $("td").on("mouseover", function (e) { var titlee = $(this).find("input").val(); $(this).attr('title', titlee); });
        resizableTables[resizableTables.length] = new ColumnResize(document.getElementById('_T_SALE_PENDINGORDER_GRID'));
        FooterFilter('_T_SALE_PENDINGORDER_GRID');
    });
</script>
<div id="dragclass" style="overflow-y:auto;max-height:500px;height:auto;overflow-x:hidden;background-color:#c4b9b9;padding:7px;border-radius: 7px;transform: translate(0%, 0%);z-index: 1;">
    <div class="table-responsive">
        @if (Model.DefaultView == true)
            {
            @Html.ValidationSummary(true)
            <div class="grid_title">
                <div class="col-md-8">
                    <input type="text" id="PO_P_IN_FS" name="PO_P_IN_FS" class="grid_title_box textbox_image" value="" placeholder="Filter" onkeyup="filterTable(event, '_T_SALE_PENDINGORDER_GRID');" />
                    <img src="~/Image/search.png" title="Help" />
                </div>
                <center style="font-size: 11px;color: darkmagenta; border: 1px inset;"><b>Order Details</b></center>
            </div>
            <div class="sticky-table sticky-ltr-cells">
                <div style="height:auto;overflow-y:scroll;overflow-x:hidden;max-height:381px;">
                    <table id="_T_SALE_PENDINGORDER_GRID" class="resizable table-striped" cellpadding="0px" cellspacing="0px" style="width: 947px;">
                        <thead>
                            <tr class="sticky-header" style="height:30px;">
                                <th class="sticky-cell" style="width: 27px;padding-left:7px;padding-right:7px;">
                                    <input type="checkbox" name="Test" id="allchkord" onclick="SetAllCheckBoxesFilter(this, '_T_SALE_PENDINGORDER_GRID', 'Ord_Checked_')" />
                                </th>
                                <th class="sticky-cell" style="width:27px;">SL No.</th>
                                <th class="" style="width:129px;">Order No.</th>
                                <th class="" style="width:88px;">Order Date</th>
                                <th class="">ItmGrp</th>
                                <th class="">Item Design</th>
                                <th class="" style="width: 50px;">Color Name</th>
                                <th class="" style="width: 50px;">Size</th>
                                <th class="" style="width:50px;text-align:right;">Order Qnty</th>
                                <th class="" style="width:50px;text-align:right;">Bal. Qnty</th>
                                <th class="" style="width:50px;text-align:right;">Current Adj. Qnty</th>
                                <th class="" style="width:71px;">Item Code</th>
                                <th class="" style="width: 50px;">Color Code</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.PENDINGORDER != null)
                            {
                                for (int i = 0; i <= Model.PENDINGORDER.Count - 1; i++)
                                {
                                    <tr style="font-size:12px; font-weight:bold;">
                                        <td class="sticky-cell" style="padding-left:7px;padding-right:7px;">
                                            @Html.CheckBoxFor(model => model.PENDINGORDER[i].Ord_Checked, new { id = "Ord_Checked_" + i })
                                        </td>
                                        <td class="sticky-cell">
                                            @Html.TextBoxFor(model => Model.PENDINGORDER[i].SLNO, new { id = "Ord_SLNO_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.PENDINGORDER[i].ORDDOCNO, new { id = "Ord_ORDDOCNO_" + i, @class = "atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                            @Html.HiddenFor(model => Model.PENDINGORDER[i].ORDAUTONO, new { id = "Ord_ORDAUTONO_" + i })
                                            @Html.HiddenFor(model => Model.PENDINGORDER[i].ORDSLNO, new { id = "Ord_ORDSLNO_" + i })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.PENDINGORDER[i].ORDDOCDT, new { id = "Ord_ORDDOCDT_" + i, @class = "atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.PENDINGORDER[i].ITGRPNM, new { id = "Ord_ITGRPNM_" + i, @class = "atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.PENDINGORDER[i].ITSTYLE, new { id = "Ord_ITSTYLE_" + i, @class = "atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.PENDINGORDER[i].COLRNM, new { id = "Ord_COLRNM_" + i, @class = " atextBoxFor ", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.PENDINGORDER[i].SIZECD, new { id = "Ord_SIZECD_" + i, @class = "atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                        <td class="">
                                            @Html.EditorFor(model => Model.PENDINGORDER[i].ORDQTY, new { htmlattributes = new { id = "Ord_ORDQTY_" + i, @class = " atextBoxFor  text-right", @TabIndex = -1, @readonly = "readonly" } })
                                        </td>
                                        <td class="">
                                            @Html.EditorFor(model => Model.PENDINGORDER[i].BALQTY, new { htmlattributes = new { id = "Ord_BALQTY_" + i, @class = " atextBoxFor  text-right", @TabIndex = -1, @readonly = "readonly" } })
                                        </td>
                                        <td class="">
                                            @Html.EditorFor(model => Model.PENDINGORDER[i].CURRENTADJQTY, new { htmlattributes = new { id = "Ord_CURRENTADJQTY_" + i, @class = " atextBoxFor  text-right", @TabIndex = -1, @readonly = "readonly" } })
                                        </td>
                                        <td class="">
                                            @Html.TextBoxFor(model => Model.PENDINGORDER[i].ITCD, new { id = "Ord_ITCD_" + i, @class = "atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                        </td>

                                        <td class="">
                                            @Html.TextBoxFor(model => Model.PENDINGORDER[i].COLRCD, new { id = "Ord_COLRCD_" + i, @class = "atextBoxFor", @TabIndex = -1, @readonly = "readonly" })
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="sticky-footer">
                                <th class="sticky-cell"></th>
                                <th class="sticky-cell" title="SL No."></th>
                                <th title="Order No."></th>
                                <th title="Order Date"></th>
                                <th title="ItmGrp"></th>
                                <th title="Item Design"></th>
                                <th title="Color Name"></th>
                                <th title="Size"></th>
                                <th title="Order Qnty"></th>
                                <th title="Bal. Qnty"></th>
                                <th title="Current Adj. Qnty"></th>
                                <th title="Item Code"></th>
                                <th title="Color Code"></th>
                            </tr>
                        </tfoot>

                    </table>
                </div>
            </div>
        }

    </div>
    <div class="row" style="padding:5px;text-align:center;">
        <input type="button" class="btn btn-success" id="btnSelectPendOrder" value="Select" style="padding: 2px 5px 2px 5px;" onclick="SelectPendOrder();" />
        <input type="button" class="btn btn-danger" id="btnCancelPendOrder" value="Close" style="padding: 2px 5px 2px 5px;" onclick="CloseBarnoPopup();" />
    </div>
</div>
