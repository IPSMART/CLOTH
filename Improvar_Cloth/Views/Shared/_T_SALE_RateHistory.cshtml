@model Improvar.ViewModels.RateHistory
    <style>
@@media (min-width: 992px) {
      .modal-lg {
        min-width: 800px !important;
      }
    }

    </style>
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Rate History</h4>
        </div>
        <div class="modal-body ">
            @if (Model.RateHistoryGrid != null)
            {
                <table class="table table-striped table-bordered" style="max-width:815px">
                    <thead>
                        @*<tr>
                                <th colspan="3" class="text-center">
                                    <span class="text-right" style="float:unset;color:darkslateblue;"> Edited BY </span>
                                </th>
                            </tr>*@
                        <tr><th>DOCDT</th><th>DOCNO</th><th>Party Name</th><th>CITY</th><th>QNTY</th><th>RATE</th></tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i <= Model.RateHistoryGrid.Count - 1; i++)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.RateHistoryGrid[i].DOCDT)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.RateHistoryGrid[i].DOCNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.RateHistoryGrid[i].SLNM)
                                    @Html.HiddenFor(model => model.RateHistoryGrid[i].SLNO)
                                    @Html.HiddenFor(model => model.RateHistoryGrid[i].SLCD)
                                    @Html.HiddenFor(model => model.RateHistoryGrid[i].AUTONO)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.RateHistoryGrid[i].CITY)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.RateHistoryGrid[i].QNTY)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.RateHistoryGrid[i].RATE)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p> Some internal Problem Found  [No column Found]</p>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" onclick="FilterColumn()">Close</button>
        </div>
    </div>
</div>

