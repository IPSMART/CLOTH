@model Improvar.ViewModels.ReportViewinHtml
@{
    ViewBag.Title = "Envelope/Correspondence Print";
    Layout = "~/Views/Shared/_ReportLayout.cshtml";
}
<script src="~/Scripts/jquery.min.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/Content/bootstrap-select.css" />
@Scripts.Render("~/Scripts/Multiple-Select-min.js")
@Scripts.Render("~/Scripts/bootstrap-select.js")
<script src="~/Scripts/jquery.min.js"></script>

@{
    var PageControllerName = "Rep_Envelope";
}
@using (Html.BeginForm())
{
    if (Model.DefaultView == true)
    {
        <div class="form-horizontal">
            @Html.HiddenFor(s => s.DefaultAction)
            <div class="report_center" style="background-color:lightgrey; padding:1%;border: 1px solid; margin: 2% 22% 2% 22%;">
                <div class="row" style="margin-top:6px">
                    <div class="col-md-6">
                        <div class="editor-label" style="margin-top:5px">
                            @Html.Label("", "Sub Ledger")
                        </div>
                    </div>
                    <div class="col-md-6">
                        @(new HtmlString(Model.Slnm))
                    </div>
                </div>
                <div class="row" style="margin-top: 5px;">
                    <div class="col-md-6">
                        <div class="editor-label" style="margin-top: 6px;">
                            @Html.Label("", "In Name of, if Others")
                        </div>
                    </div>
                    <div class="col-md-11">
                        <div class="editor-field">
                            @Html.EditorFor(model => model.TEXTBOX2, new { htmlAttributes = new { @class = "form-control", id = "OTHNAME", @placeholder = "if print in ohter Name", maxlength = 60 } })
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top: 5px;">
                    <div class="col-md-6">
                        <div class="editor-label" style="margin-top: 6px;">
                            @Html.Label("", "Regd.Off.Address")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="editor-field" style="margin-top:6px;">
                            @Html.CheckBoxFor(model => model.Checkbox1)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="editor-label" style="margin-top: 6px;">
                            @Html.Label("", "Report Format")
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="editor-field">
                            @Html.DropDownListFor(model => model.TEXTBOX1, new SelectList(Model.DropDown_list1, "Value", "Text"), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top:10PX">
                    <div class="col-md-8">
                        <input type="submit" value="Envelope" name="submitbutton" class="btn btn-default" formtarget="_blank" autofocus/>
                    </div>
                    <div class="col-md-8">
                        <input type="submit" value="Correspondence" name="submitbutton" class="btn btn-default" formtarget="_blank" />
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="container">
        <div id="helpDIV" style="z-index: 2;">
        </div>
    </div>
}
