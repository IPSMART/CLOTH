@model Improvar.ViewModels.ReportViewinHtml
@{
    ViewBag.Title = "Subledger Print";
    Layout = "~/Views/Shared/_ReportLayout.cshtml";
}
<script src="~/Scripts/jquery.min.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/Content/bootstrap-select.css" />
@Scripts.Render("~/Scripts/Multiple-Select-min.js")
@Scripts.Render("~/Scripts/bootstrap-select.js")
<script src="~/Scripts/jquery.min.js"></script>

@{
    var PageControllerName = "Rep_SubledgerPrint";
}
@using (Html.BeginForm())
{
    if (Model.DefaultView == true)
    { <input type="hidden" id="trnsportlinkcd" value="T" />
        <div class="form-horizontal">
            @Html.HiddenFor(s => s.DefaultAction)
            <div class="report_center" style="background-color:lightgrey; padding:1%;border: 1px solid; margin: 2% 22% 2% 22%;">
                <div class="row" style="margin-top:10px">
                    <div class="col-md-8">
                        <div class="editor-label" style="margin-top: 6px;">
                            @Html.Label("", "Sub Ledger Code")
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="editor-field">
                            @Html.EditorFor(model => model.TEXTBOX1, new { htmlAttributes = new { @class = "form-control", id = "TextBox1", @TabIndex = -1, @readonly = "readonly" } })
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top:10px">
                    <div class="col-md-8">
                        <div class="editor-label" style="margin-top: 6px;">
                            @Html.Label("", "Sub Ledger Name")
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="editor-field">
                            @Html.EditorFor(model => model.TEXTBOX6, new { htmlAttributes = new { @class = "form-control", id = "TextBox6", @TabIndex = -1, @readonly = "readonly" } })
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top:6px">
                    <div class="col-md-8">
                        <div class="editor-label" style="margin-top:5px">
                            @Html.Label("", "Sub Ledger")
                        </div>
                    </div>
                    <div class="col-md-6">
                        @(new HtmlString(Model.Slnm))
                    </div>
                </div>
                <div class="row" style="margin-top: 5px;">
                    <div class="col-md-8">
                        <div class="editor-label" style="margin-top: 6px;">
                            @Html.Label("", "In Name of, if Others")
                        </div>
                    </div>
                    <div class="col-md-11">
                        <div class="editor-field">
                            @Html.EditorFor(model => model.TEXTBOX2, new { htmlAttributes = new { @class = "form-control", id = "OTHNAME", @placeholder = "if print in ohter Name", maxlength = 60, @autocomplete="off" } })
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top: 5px;">
                    <div class="col-md-6">
                        <div class="editor-label" style="margin-top: 6px;">
                            @Html.Label("", "Regd.Off.Address")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="editor-field" style="margin-top:6px;">
                            @Html.CheckBoxFor(model => model.Checkbox1)
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top: 5px;">
                    <div class="col-md-6">
                        <div class="editor-label" style="margin-top: 6px;">
                            @Html.Label("", "Show Auto Reminder")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="editor-field" style="margin-top:6px;">
                            @Html.CheckBoxFor(model => model.Checkbox2)
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top:10px">
                    <div class="col-md-8">
                        <div class="editor-label" style="margin-top: 6px;">
                            @Html.Label("", "Party Type")
                        </div>
                    </div>
                    <div class="col-md-6">
                        @(new HtmlString(Model.TEXTBOX3))
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="editor-label" style="margin-top: 6px;">
                            @Html.Label("", "Transporter")
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="editor-field">
                            @Html.EditorFor(model => model.TEXTBOX4, new { htmlAttributes = new { @class = "form-control textbox_image", id = "TRANSLCD", onkeydown = "GetHelpBlur('" + @Url.Action("GetSubLedgerDetails", PageControllerName) + "','Transporter Details','TRANSLCD','TRANSLCD=slcd=1/TRANSLNM=slnm=0','trnsportlinkcd');", onblur = "GetHelpBlur('" + @Url.Action("GetSubLedgerDetails", PageControllerName) + "','Transporter Details','TRANSLCD','TRANSLCD=slcd=1/TRANSLNM=slnm=0','trnsportlinkcd');", @placeholder = "Code", maxlength = 8 } })
                            <img src="~/Image/search.png" width="20px" height="20px" id="help_translcd" class="Help_image_button" title="Help" onmousedown="GetHelpBlur('@Url.Action("GetSubLedgerDetails", PageControllerName)','Transporter Details','TRANSLCD','TRANSLCD=slcd=1/TRANSLNM=slnm=0','trnsportlinkcd')" />
                        </div>
                    </div>
                    <div class="col-md-11">
                        <div class="editor-field">
                            @Html.EditorFor(model => model.TEXTBOX6, new { htmlAttributes = new { @class = "form-control", id = "TRANSLNM", maxlength = 45, @TabIndex = -1, @placeholder = "Transporter Name", @readonly = "readonly" } })
                        </div>
                    </div>
                    </div>
                    <div class="row" style="margin-top:10PX">
                        <div class="col-md-8">
                            <div class="editor-label" style="margin-top: 6px;">
                                @Html.Label("", "Report Type")
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <label class="radio-inline">
                                @Html.RadioButtonFor(g => g.TEXTBOX5, "All", new { @checked = "checked" })  @Html.Label("Show All Ledger")
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(g => g.TEXTBOX5, "Correspondence", new { @checked = "checked" })  @Html.Label("Correspondence")
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(g => g.TEXTBOX5, "Envelope")  @Html.Label("Envelope")
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(g => g.TEXTBOX5, "Excel")  @Html.Label("Excel")
                            </label>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10PX">
                        <div class="col-lg-6">
                            <input type="submit" value="Show Report" name="submitbutton" class="btn btn-default" formtarget="_blank" />
                        </div>
                    </div>
                </div>
        </div>
    }
    <div class="container">
        <div id="helpDIV" style="z-index: 2;">

        </div>
    </div>
}
